<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.main.myPage.serviceInfo.appInfo.AppInfoActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/act_app_info_tb_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
                android:layout_gravity="center"
                android:letterSpacing="-0.02"
                android:textColor="#444444"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textSize="16sp"
                android:text="앱 정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

<RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/act_app_info_iv_logo"
            android:src="@drawable/img_logo_appinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/act_app_info_tv_version"
            android:layout_below="@+id/act_app_info_iv_logo"
            android:layout_marginTop="44dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#9b9b9b"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:letterSpacing="-0.02"
            android:gravity="center_horizontal"
    />

    <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/act_app_info_tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#404040"
            android:letterSpacing="-0.02"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:text="현재 베타버전입니다."
    />

</RelativeLayout>



</RelativeLayout>