<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="vm"
                type="com.icoo.ssgsag_android.ui.login.LoginViewModel"/>
    </data>



    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="312dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="38dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginHorizontal="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_marginBottom="28dp"
                        android:letterSpacing="-0.02"
                        android:textSize="19sp"
                        android:textColor="#000"
                        android:text="@string/login_dialog_contents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
                        android:id="@+id/act_login_dialog_btn_naver"
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content"/>

                <com.kakao.usermgmt.LoginButton
                        android:adjustViewBounds="true"
                        android:id="@+id/act_login_dialog_btn_kakao"
                        android:layout_marginBottom="33dp"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <ImageView
                    android:background="#e6e6e6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="14dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/act_login_dialog_iv_cancel"
                        android:src="@drawable/ic_cancel_popup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>
