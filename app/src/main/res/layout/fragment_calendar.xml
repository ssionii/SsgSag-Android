<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="vm"
                type="com.icoo.ssgsag_android.ui.main.calendar.CalendarViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frag_cal_cl_container"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/main_navi_height"
            tools:context=".ssgsag_android.ui.main.schedule.CalendarFragment">

        <RelativeLayout
                android:id="@+id/frag_cal_rl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingHorizontal="12dp">

            <ImageView
                    android:id="@+id/frag_cal_iv_drawer"
                    android:layout_centerVertical="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/profile"/>

            <TextView
                    tools:text="Day"
                    android:layout_centerVertical="true"
                    android:id="@+id/frag_cal_tv_day"
                    android:layout_toRightOf="@+id/frag_cal_iv_drawer"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="8sp"/>


            <ImageView
                    android:id="@+id/frag_cal_iv_modify"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/modify"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_centerVertical="true"/>
            <ImageView
                    android:visibility="gone"
                    android:id="@+id/frag_cal_iv_delete_back"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/back_cal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_centerVertical="true"
                    />
            <TextView
                    android:visibility="gone"
                    android:id="@+id/frag_cal_tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제"
                    android:textSize="14sp"
                    android:textColor="#656ef0"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    />

            <ImageView
                    android:id="@+id/frag_cal_iv_list"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/switch_to_list"
                    android:layout_toLeftOf="@+id/frag_cal_iv_modify"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:visibility="invisible"
                    android:id="@+id/frag_cal_iv_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/switch_to_calendar"
                    android:layout_toLeftOf="@+id/frag_cal_iv_modify"
                    android:layout_centerVertical="true"/>


        </RelativeLayout>

        <LinearLayout
                android:id="@+id/frag_calendar_cl_tab"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_cal_rl_toolbar"
                android:orientation="horizontal">
            <LinearLayout
                    android:id="@+id/frag_calendar_ll_all"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textSize="14sp"
                        android:textColor="@color/ssgsag"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        calendarFavoriteTabText="@{!vm.isFavorite()}"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/ssgsag"
                        calendarFavoriteTabView="@{!vm.isFavorite()}"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/frag_calendar_ll_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="즐겨찾기"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:textSize="14sp"
                        android:textColor="@color/grey_2"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        calendarFavoriteTabText="@{vm.isFavorite}"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grey_4"
                        calendarFavoriteTabView="@{vm.isFavorite}"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
                android:id="@+id/frag_calendar_rl_page_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/frag_calendar_cl_tab"
                app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/frag_calendar_ll_day_of_week"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="일"
                            android:textSize="10sp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_3"/>

                    <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="월"
                            android:textSize="10sp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_3"/>

                    <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="화"
                            android:textSize="10sp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_3"/>

                    <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="수"
                            android:textSize="10sp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_3"/>

                    <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="목"
                            android:textSize="10sp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_3"/>

                    <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="금"
                            android:textSize="10sp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_3"/>

                    <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="토"
                            android:textSize="10sp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_3"/>

                </LinearLayout>

                <View
                        android:id="@+id/frag_calendar_v"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_4"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/frag_calendar_ll_day_of_week" />

                <androidx.viewpager.widget.ViewPager
                        android:background="@color/white"
                        android:id="@+id/frag_calendar_vp_page"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:saveEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/frag_calendar_v"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                </androidx.viewpager.widget.ViewPager>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/frag_calendar_cl_coachmark_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_calendar_cl_coachmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="51dp"
                    android:layout_marginBottom="13dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_coachmark_calendar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>