<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="vm"
                type="com.icoo.ssgsag_android.ui.main.calendar.CalendarViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frag_cal_cl_container"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/main_navi_height"
            tools:context=".ssgsag_android.ui.main.schedule.CalendarFragment">

        <RelativeLayout
                android:id="@+id/frag_cal_rl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingHorizontal="12dp">

            <ImageView
                    android:id="@+id/frag_cal_iv_drawer"
                    android:layout_centerVertical="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/profile"/>

            <TextView
                    tools:text="Day"
                    android:layout_centerVertical="true"
                    android:id="@+id/frag_cal_tv_day"
                    android:layout_toRightOf="@+id/frag_cal_iv_drawer"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="8sp"/>


            <ImageView
                    android:id="@+id/frag_cal_iv_modify"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/modify"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_centerVertical="true"/>
            <ImageView
                    android:visibility="gone"
                    android:id="@+id/frag_cal_iv_delete_back"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/back_cal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_centerVertical="true"
                    />
            <TextView
                    android:visibility="gone"
                    android:id="@+id/frag_cal_tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제"
                    android:textSize="14sp"
                    android:textColor="#656ef0"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    />

            <ImageView
                    android:id="@+id/frag_cal_iv_list"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/switch_to_list"
                    android:layout_toLeftOf="@+id/frag_cal_iv_modify"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:visibility="invisible"
                    android:id="@+id/frag_cal_iv_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/switch_to_calendar"
                    android:layout_toLeftOf="@+id/frag_cal_iv_modify"
                    android:layout_centerVertical="true"/>


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:visibility="visible"
                android:layout_marginHorizontal="24dp"
                android:id="@+id/frag_calendar_rv_sort"
                app:layout_constraintTop_toBottomOf="@+id/frag_cal_rl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                app:replaceAll="@{vm.categorySort}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <LinearLayout
                android:id="@+id/frag_calendar_ll_day_of_week"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/frag_calendar_rv_sort">

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="일"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="월"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="화"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="수"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="목"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="금"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="토"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/dayOfWeek"/>

        </LinearLayout>

        <FrameLayout
                android:id="@+id/frag_calendar_rl_page_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/frag_calendar_ll_day_of_week"
                app:layout_constraintBottom_toBottomOf="parent">

            <androidx.viewpager.widget.ViewPager
                    android:background="@color/white"
                    android:id="@+id/frag_calendar_vp_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:saveEnabled="false">

            </androidx.viewpager.widget.ViewPager>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/frag_calendar_cl_coachmark_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frag_calendar_cl_coachmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="51dp"
                    android:layout_marginBottom="13dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_coachmark_calendar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>