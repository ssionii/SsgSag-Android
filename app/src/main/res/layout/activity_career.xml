<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.myPage.career.CareerActivity"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/act_career_tb_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
                android:layout_gravity="center"
                android:letterSpacing="-0.02"
                android:textColor="#000000"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:text="이력"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/act_career_tl"
            android:background="@color/white"
            app:tabIndicatorColor="@color/cornflower"
            android:layout_width="match_parent"
            android:layout_height="44dp">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/act_career_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/act_main_tl">

    </androidx.viewpager.widget.ViewPager>



</LinearLayout>