<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="vm"
                type="com.icoo.ssgsag_android.ui.main.calendar.CalendarViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
                android:id="@+id/frag_cal_grid_ll_day_of_week"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="일"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_3"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="월"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_3"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="화"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_3"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="수"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_3"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="목"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_3"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="금"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_3"/>

            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="토"
                    android:textSize="10sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_3"/>

        </LinearLayout>

        <View
                android:id="@+id/frag_cal_grid_v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_4"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/frag_cal_grid_ll_day_of_week" />

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/frag_cal_grid_vp_page"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:saveEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_cal_grid_v"
                app:layout_constraintVertical_bias="0.0">

        </androidx.viewpager.widget.ViewPager>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>