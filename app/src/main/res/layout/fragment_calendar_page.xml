<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="vm"
                type="com.icoo.ssgsag_android.ui.main.calendar.CalendarViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ssgsag_android.ui.main.schedule.calendarPage.CalendarPageFragment">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frag_calendar_page_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <ProgressBar
                android:visibility="@{vm.isProgress}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

           </androidx.constraintlayout.widget.ConstraintLayout>
</layout>