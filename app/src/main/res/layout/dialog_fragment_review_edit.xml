<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_centerVertical="true"
                app:cardCornerRadius="8dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/dialog_review_edit_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                    <TextView
                            android:id="@+id/dialog_review_edit_tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="58dp"
                            android:text="@string/review_edit_dialog"
                            android:textColor="@color/black_1"
                            android:fontFamily="@font/noto_sans_kr_medium"
                            android:textSize="14sp"/>
                    <TextView
                            android:id="@+id/dialog_review_edit_tv_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/review_edit_dialog_text"
                            android:textColor="@color/black_2"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="42dp"/>


                </LinearLayout>
                <View
                        android:id="@+id/dialog_review_edit_v"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_4"
                        android:layout_below="@+id/dialog_review_edit_container"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/dialog_review_edit_v">

                    <TextView
                            android:id="@+id/dialog_review_edit_tv_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="취소"
                            android:textColor="#aaaaaa"
                            android:textSize="16dp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:layout_weight="1"
                            android:gravity="center"/>

                    <TextView
                            android:id="@+id/dialog_review_edit_tv_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="수정"
                            android:textColor="#656ef0"
                            android:textSize="16dp"
                            android:fontFamily="@font/noto_sans_kr_medium"
                            android:layout_weight="1"
                            android:gravity="center"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</layout>