<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/rv_career_cv"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="10dp"
        card_view:cardCornerRadius="4dp"
        app:cardElevation="0dp"

        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:layout_gravity="end"
            android:id="@+id/rv_career_iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:src="@drawable/group_3" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="18dp">
        <TextView
                android:id="@+id/rv_career_tv_career_card_title"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="19sp"/>

        <TextView
                android:id="@+id/rv_career_tv_career_card_time"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="시간"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#a3a3a3"
                android:letterSpacing="-0.02" />
        <TextView
                android:id="@+id/rv_career_tv_career_card_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="#4a4a4a"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="7sp"
                android:maxLines="3"
                android:text="내용"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>