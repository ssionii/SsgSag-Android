<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="vm"
                type="com.icoo.ssgsag_android.ui.main.MainViewModel"/>
    </data>
<FrameLayout
        android:id="@+id/frag_main_fl_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/main_navi_height">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/frag_main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingHorizontal="12dp">

            <ImageView
                    android:id="@+id/frag_main_iv_mypage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/profile"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                <TextView
                        android:id="@+id/frag_main_tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체"
                        android:textColor="#aaaaaa"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="15dp"
                        android:layout_gravity="center"
                        android:letterSpacing="0.1"
                        tabType="@{!vm.isSsgSagFragment.booleanValue()}"/>
                <View
                        android:layout_width="1dp"
                        android:layout_height="17dp"
                        android:background="#dddddd"
                        android:layout_centerInParent="true"/>

                <TextView
                        android:id="@+id/frag_main_tv_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/frag_main_tv_all"
                        android:layout_marginLeft="10dp"
                        android:text="추천"
                        android:textColor="#656ef0"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="18dp"
                        android:letterSpacing="0.1"
                        android:layout_gravity="center"
                        tabType="@{vm.isSsgSagFragment.booleanValue()}"/>
            </RelativeLayout>

            <ImageView
                    android:id="@+id/frag_main_iv_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/filter"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"/>

            <ImageView
                    android:id="@+id/frag_main_iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_gray"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"/>

        </RelativeLayout>

        <FrameLayout
                android:id="@+id/frag_main_fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>


</FrameLayout>
</layout>