<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_navi_height"
        android:background="@color/white"
        android:elevation="2dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <RelativeLayout
                android:id="@+id/top_navigation_rl_feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <ImageView
                    android:id="@+id/navi_main_iv_feed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/selector_navigation_feed"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천뉴스"
                    android:textSize="8sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@drawable/selector_navigation_text"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/navi_main_iv_feed"
                    android:layout_marginBottom="2dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/top_navigation_rl_ssg_sag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <ImageView
                    android:id="@+id/navi_main_iv_ssgsag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_navigation_home"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="슥삭"
                    android:textSize="8sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@drawable/selector_navigation_text"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/navi_main_iv_ssgsag"
                    android:layout_marginBottom="2dp"/>
            <RelativeLayout
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:layout_alignEnd="@+id/navi_main_iv_ssgsag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <View
                        android:layout_centerInParent="true"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:background="@drawable/circle_contest"/>

                <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="-1sp"
                        tools:text="수"/>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/top_navigation_rl_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <ImageView
                    android:id="@+id/navi_main_iv_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/selector_navigation_calendar"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="캘린더"
                    android:textSize="8sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@drawable/selector_navigation_text"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/navi_main_iv_calendar"
                    android:layout_marginBottom="2dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/top_navigation_rl_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible">
            <ImageView
                    android:id="@+id/navi_main_iv_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/selector_navigation_review"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/navi_main_iv_review"
                    android:text="후기"
                    android:textSize="8sp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@drawable/selector_navigation_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>