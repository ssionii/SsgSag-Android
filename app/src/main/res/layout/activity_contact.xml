<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".ui.main.myPage.serviceInfo.ServiceInfoActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/act_contact_tb_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
                android:layout_gravity="center"
                android:letterSpacing="-0.02"
                android:textColor="#444444"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textSize="16sp"
                android:text="문의하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.Toolbar>
               <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                   <LinearLayout
                           android:layout_marginHorizontal="20dp"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_above="@+id/act_contact_tv_ment"
                           android:orientation="vertical">

                       <TextView
                               android:layout_marginTop="45dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="16sp"
                               android:fontFamily="@font/noto_sans_kr_medium"
                               android:textColor="#444444"
                               android:letterSpacing="-0.02"
                               android:text="문의종류"/>

                       <LinearLayout
                               android:layout_marginTop="19dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                           <LinearLayout
                                   android:layout_marginBottom="9dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal">

                               <RelativeLayout
                                       android:id="@+id/act_contact_rl_cate_1"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:layout_marginRight="4dp"
                                       android:background="@drawable/selector_contact_item_bg">
                                   <TextView
                                           android:id="@+id/act_contact_tv_cate_1"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:fontFamily="@font/noto_sans_kr_regular"
                                           android:textSize="14sp"
                                           android:layout_centerInParent="true"
                                           android:layout_marginVertical="10dp"
                                           android:textColor="@drawable/selector_contact_item_text"
                                           android:text="피드백"/>
                               </RelativeLayout>
                               <RelativeLayout
                                       android:id="@+id/act_contact_rl_cate_2"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:layout_marginRight="4dp"
                                       android:background="@drawable/selector_contact_item_bg">
                                   <TextView
                                           android:id="@+id/act_contact_tv_cate_2"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:fontFamily="@font/noto_sans_kr_regular"
                                           android:textSize="14sp"
                                           android:textColor="@drawable/selector_contact_item_text"
                                           android:text="오류"
                                           android:layout_marginVertical="10dp"
                                           android:layout_centerInParent="true"/>
                               </RelativeLayout>
                               <RelativeLayout
                                       android:id="@+id/act_contact_rl_cate_3"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:background="@drawable/selector_contact_item_bg">
                                   <TextView
                                           android:id="@+id/act_contact_tv_cate_3"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:fontFamily="@font/noto_sans_kr_regular"
                                           android:textSize="14sp"
                                           android:textColor="@drawable/selector_contact_item_text"
                                           android:text="기능추가"
                                           android:layout_centerInParent="true"
                                           android:layout_marginVertical="10dp"/>
                               </RelativeLayout>
                               </LinearLayout>

                           <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal">

                               <RelativeLayout
                                       android:id="@+id/act_contact_rl_cate_4"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:layout_marginRight="4dp"
                                       android:background="@drawable/selector_contact_item_bg">
                                   <TextView
                                           android:id="@+id/act_contact_tv_cate_4"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:fontFamily="@font/noto_sans_kr_regular"
                                           android:textSize="14sp"
                                           android:layout_centerInParent="true"
                                           android:layout_marginVertical="10dp"
                                           android:textColor="@drawable/selector_contact_item_text"
                                           android:text="디자인개선"/>
                               </RelativeLayout>
                               <RelativeLayout
                                       android:id="@+id/act_contact_rl_cate_5"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:layout_marginRight="4dp"
                                       android:background="@drawable/selector_contact_item_bg">
                                   <TextView
                                           android:id="@+id/act_contact_tv_cate_5"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:fontFamily="@font/noto_sans_kr_regular"
                                           android:textSize="14sp"
                                           android:textColor="@drawable/selector_contact_item_text"
                                           android:text="홍보문의"
                                           android:layout_marginVertical="10dp"
                                           android:layout_centerInParent="true"/>
                               </RelativeLayout>
                               <RelativeLayout
                                       android:id="@+id/act_contact_rl_cate_6"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:background="@drawable/selector_contact_item_bg">
                                   <TextView
                                           android:id="@+id/act_contact_tv_cate_6"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:fontFamily="@font/noto_sans_kr_regular"
                                           android:textSize="14sp"
                                           android:textColor="@drawable/selector_contact_item_text"
                                           android:text="기타"
                                           android:layout_centerInParent="true"
                                           android:layout_marginVertical="10dp"/>
                               </RelativeLayout>
                           </LinearLayout>

                       </LinearLayout>

                       <TextView
                               android:layout_marginTop="28dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="16sp"
                               android:fontFamily="@font/noto_sans_kr_medium"
                               android:textColor="#444444"
                               android:letterSpacing="-0.02"
                               android:text="내용"/>

                       <EditText
                               android:id="@+id/act_contact_et_contents"
                               android:paddingHorizontal="14dp"
                               android:paddingVertical="10dp"
                               android:textColorHint="#bdbdbd"
                               android:fontFamily="@font/noto_sans_kr_regular"
                               android:textSize="14sp"
                               android:letterSpacing="-0.02"
                               android:lineHeight="23dp"
                               android:gravity="top"
                               android:hint="슥삭을 사용하면서 불편했던 점을 말씀해주세요!"
                               android:layout_marginTop="13dp"
                               android:inputType="textMultiLine|textNoSuggestions"
                               android:cursorVisible="true"
                               android:background="@drawable/todo_border"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"/>


                   </LinearLayout>

                   <TextView
                           android:id="@+id/act_contact_tv_ment"
                           android:layout_marginTop="6dp"
                           android:layout_marginLeft="30dp"
                           android:fontFamily="@font/noto_sans_kr_regular"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="12sp"
                           android:textColor="#bdbdbd"
                           android:letterSpacing="-0.02"
                           android:lineSpacingExtra="11sp"
                           android:layout_above="@+id/act_contact_iv_forward"

                           android:text="더 많은 문의사항은 shane@ssgsag.kr로 부탁드립니다 :)"/>

                   <ImageView
                           android:id="@+id/act_contact_iv_forward"
                           android:layout_marginBottom="52dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/bt_forward"
                           android:layout_marginTop="20dp"
                           android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>


               </RelativeLayout>





</LinearLayout>