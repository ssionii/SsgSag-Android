<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--액션바, 타이틀바 제거-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--상태바색, 글씨색 변경-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--멀티터치 금지-->
        <item name="android:splitMotionEvents">false</item>

        <!--가로모드 금지-->
        <item name="android:screenOrientation">portrait</item>


    </style>

    <!-- DIALOG STYLE -->
    <style name="Dialog" parent="android:Theme.Holo.Dialog" >
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="popupTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textColor">#787878</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="reviewRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="writeReviewRatingBar" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">34dip</item>
        <item name="android:maxHeight">34dip</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_4</item>
    </style>

    <!-- photo picker library-->
    <style name="LibAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ssgsag</item>
        <item name="colorPrimaryDark">@color/ssgsag</item>
        <item name="colorAccent">@color/ssgsag</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="PickerTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/ssgsag</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
    </style>


</resources>